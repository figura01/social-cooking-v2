<div class="container">
    <h1>Recipes</h1>
    <a href="/recipes/create">+ New</a>
    <div class="table-overflow">
        <table class="table table-recipes">
            <thead>
                <tr>
                    <th>#id</th>
                    <th>Image</th>
                    <th>Title</th>

                    <th>Description</th>
                    <th>Ingredients</th>
                    <th>Steps</th>
                    <th>Tags</th>
                    <th>Category</th>
                    <th>Type Plat</th>
                    <th>Image</th>
                    <th>Owner</th>
                    <th>Favorites</th>

                    <th>edite</th>
                    <th>delete</th>
                </tr>
            </thead>

            <tbody>
                {{#each recipes}}
                <tr>
                    <td>{{this._id}}</td>
                    <td class="cell-avatar"><img src={{this.image}} />{{this.image}}</td>

                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        {{#each this.ingredients}}
                        <p>{{this}}</p>
                        {{/each}}
                    </td>

                    <td>
                        {{#each this.steps}}
                        <p>{{this}}</p>
                        {{/each}}
                    </td>

                    <td>
                        {{#each this.tags}}
                        <p>{{this}}</p>
                        {{/each}}
                    </td>

                    <td>
                        <p>{{this.category._id}}</p>

                    </td>

                    <td>{{this.typePlate}}</td>
                    <td>{{this.image}}</td>
                    <td>{{this.owner}}</td>

                    <td>
                        {{#each this.favorites}}
                        <p>{{this}}</p>
                        {{/each}}
                    </td>

                    <td><a href="/recipes/{{this._id}}/edit">Edite</a></td>
                    <td><a href="/recipes/{{this._id}}/delete">Delte</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>