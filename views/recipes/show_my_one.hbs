<div class="container">
    <div class="page page-single-card">
        <div class="card recipe">
            <img src="{{recipe.image}}" alt="{{recipe.title}}" />
            <div class="content-header">
                <h3>{{recipe.title}}</h3>
                <p>{{recipe.description}}</p>
            </div>
            <section class="section section-tags">
                <h4>Tags</h4>
                <div class="list-tags">
                    {{#each recipe.tags}}
                    <span class="list-itags-item">
                        {{this.label}}
                    </span>
                    {{/each}}
                </div>
            </section>
            <section class="section section-ingredients">
                <h4>Ingredients</h4>
                <ul class="list-ingredients">
                    {{#each recipe.ingredients}}
                    <li class="list-ingredients-item">
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </section>
            <section class="section section-steps">
                <h4>Steps</h4>
                <ul>
                    {{#each recipe.steps}}
                    <li class="step">
                        {{this}}
                    </li>
                    {{/each}}
                </ul>
            </section>

            <div class="action-btn">
                <a href="/recipes/{{recipe._id}}/my/edit" class="btn btn-edit">Edit</a>
                <a href="/recipes/{{recipe._id}}/my/delete" class="btn btn-delete">Delete</a>
            </div>

        </div>
    </div>
</div>